<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.keke.android_nfc.MainActivity" >
        
	<TextView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:text="Secret Key:"/>
        
	<EditText 
		android:id="@+id/et_secret_key"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="text"
		android:text="FF-FF-FF-FF-FF-FF"/>
    
	<TextView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:text="Secret Key Type:"/>
	
	<RadioGroup 
	    android:id="@+id/rg_secret_key_type"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    
	    <RadioButton 
	        android:id="@+id/rb_keya"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="KeyA"/>
	    
	    <RadioButton 
	        android:id="@+id/rb_keyb"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="KeyB"
	        android:checked="true"/>
	</RadioGroup>
	
	<TextView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:text="Sector:"/>
        
	<EditText 
		android:id="@+id/et_sector"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="number"
		android:text="0"/>

    <TextView 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:text="Sector Data:"/>
    
    <TextView 
        android:id="@+id/tv_sector_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
</LinearLayout>
